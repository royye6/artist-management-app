generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  first_name String   @db.VarChar(255)
  last_name  String   @db.VarChar(255)
  username   String   @unique @db.VarChar(255)
  email      String   @unique @db.VarChar(255)
  password   String
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt
}

model RecordLabel {
  id              Int        @id @default(autoincrement())
  name            String
  website_url     String?
  address         String
  city            String
  state           String
  country         String
  signed_artists  Artist[]
  in_house_albums Album[]
  contracts       Contract[]
}

model Artist {
  id                    Int           @id @default(autoincrement())
  first_name            String        @db.VarChar(255)
  last_name             String        @db.VarChar(255)
  stage_name            String        @db.VarChar(255)
  bio                   String?
  image                 String?
  genre                 String?
  albums                Album?
  contract              Contract[]
  music_tours           Tour[]
  transactions          Finance[]
  accolades             Accolade[]
  social_media_profiles SocialMedia[]
  record_label          RecordLabel   @relation(fields: [record_label_id], references: [id])
  record_label_id       Int
  created_at            DateTime      @default(now()) @db.Timestamp(6)
  updated_at            DateTime      @updatedAt
}

model Album {
  id              Int         @id @default(autoincrement())
  title           String
  release_date    DateTime
  cover_art       String
  artist          Artist      @relation(fields: [artist_id], references: [id])
  artist_id       Int         @unique
  soundtracks     Track[]
  record_label    RecordLabel @relation(fields: [record_label_id], references: [id])
  record_label_id Int         @unique
  created_at      DateTime    @default(now()) @db.Timestamp(6)
  updated_at      DateTime    @updatedAt
}

model Track {
  id         Int      @id @default(autoincrement())
  title      String
  duration   Int
  filename   String
  album      Album    @relation(fields: [album_id], references: [id])
  album_id   Int      @unique
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt
}

model Tour {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(255)
  start_date DateTime
  end_date   DateTime
  venue      Venue    @relation(fields: [venue_id], references: [id])
  venue_id   Int      @unique
  artist     Artist   @relation(fields: [artist_id], references: [id])
  artist_id  Int
  created_at DateTime @default(now()) @db.Timestamp(6)
  updated_at DateTime @updatedAt
  tourDateId Int
}

model Venue {
  id               Int      @id @default(autoincrement())
  name             String
  website_url      String?
  address          String
  city             String
  state            String
  country          String
  associated_tours Tour[]
  created_at       DateTime @default(now()) @db.Timestamp(6)
  updated_at       DateTime @updatedAt
}

model Contract {
  id              Int         @id @default(autoincrement())
  artist          Artist      @relation(fields: [artist_id], references: [id])
  artist_id       Int         @unique
  record_label    RecordLabel @relation(fields: [record_label_id], references: [id])
  record_label_id Int         @unique
  start_date      DateTime
  end_date        DateTime
  contract_terms  String
  created_at      DateTime    @default(now()) @db.Timestamp(6)
  updated_at      DateTime    @updatedAt
}

model Finance {
  id               Int      @id @default(autoincrement())
  artist           Artist   @relation(fields: [artist_id], references: [id])
  artist_id        Int
  transaction_type String
  amount           Decimal
  description      String
  created_at       DateTime @default(now()) @db.Timestamp(6)
  updated_at       DateTime @updatedAt
}

model SocialMedia {
  profile_id  Int      @id @default(autoincrement())
  artist      Artist   @relation(fields: [artist_id], references: [id])
  artist_id   Int
  platform    String
  profile_url String
  created_at  DateTime @default(now()) @db.Timestamp(6)
  updated_at  DateTime @updatedAt
}

model Merchandise {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Decimal
  image       String?
  created_at  DateTime @default(now()) @db.Timestamp(6)
  updated_at  DateTime @updatedAt
}

model Accolade {
  id             Int      @id @default(autoincrement())
  award_name     String
  award_category String
  artist         Artist   @relation(fields: [artist_id], references: [id])
  artist_id      Int
  award_date     DateTime
  created_at     DateTime @default(now()) @db.Timestamp(6)
  updated_at     DateTime @updatedAt
}
